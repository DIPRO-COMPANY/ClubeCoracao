{
    "manifest_version": 2,
    "name": "Clube do Coração",
    "description": "Tenha informações atualizadas sobre a situação do seu time no brasileirão 24 horas por dia.",
    "version": "1.0.2",
    "icons":
    {
        "16": "/imagens/icon.png",
        "32": "/imagens/icon.png",
        "48": "/imagens/icon.png",
        "128": "/imagens/icon.png"
    },
    "permissions":
    [
        "http://*/*",
        "https://*/*"
    ],
    "background":
    {
        "scripts": ["/scripts/localstorage.js", "/scripts/badge.js", "/scripts/background.js"],
        "persistent": true
    },
    "browser_action":
    {
        "default_icon": "/imagens/brasil.png",
        "default_popup": "/html/popup.html"
    }
}